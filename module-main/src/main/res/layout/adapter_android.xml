<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/tb_title">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin18"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/dp_4"
            app:cardCornerRadius="@dimen/margin12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin12"
                    android:drawableLeft="@drawable/ic_title"
                    android:drawablePadding="@dimen/margin6"
                    android:text="分类"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/standard_title" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin12"
                    android:text="@string/app_name"
                    android:textColor="@color/color_70"
                    android:textSize="@dimen/standard_work" />

                <TextView
                    android:id="@+id/tv_resolver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="参考分析"
                    android:paddingRight="@dimen/margin12"
                    android:paddingBottom="@dimen/margin12"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/standard_weak" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_title"
            android:layout_marginTop="@dimen/margin18"
            android:drawablePadding="@dimen/margin6"
            android:hint="请输入相关答案"
            android:textSize="@dimen/standard_title"
            android:theme="@style/Theme.BLCSkotin"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin18"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_pre"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_gravity="left"
                android:background="@drawable/btn_radious_green"
                android:padding="@dimen/margin6"
                android:textStyle="bold"
                android:text="上一题"/>
            <TextView
                android:id="@+id/tv_next"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:background="@drawable/btn_radious_green"
                android:padding="@dimen/margin6"
                android:textStyle="bold"
                android:text="下一题"/>
        </FrameLayout>
        <TextView
            android:id="@+id/tv_page"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/standard_weak"
            android:textColor="@color/purple_700"
            android:text="1/10"
            android:layout_gravity="right"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
