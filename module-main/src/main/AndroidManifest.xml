<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blcs.mainmodule">

    <application
        android:name=".BlcsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_app512"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app512"
        android:supportsRtl="true"
        android:theme="@style/Theme.BLCSkotin">
        <activity android:name=".activity.MainActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.DatabindingActivity"/>
        <activity android:name=".activity.PublicActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask"
            />
    </application>

</manifest>