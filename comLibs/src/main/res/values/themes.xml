<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BLCSkotin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 系统状态栏背景色 -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--标题栏背景色-->
        <item name="colorPrimary"  tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- 背景色 -->
        <item name="android:windowBackground">@color/white</item>
        <!--  转场动画 -->
        <item name="android:windowAnimationStyle">@style/transitionAnim</item>

    </style>

    <style name="transitionAnim">
        <item name="android:activityOpenEnterAnimation">@anim/right_push_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_push_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_push_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_push_out</item>
    </style>
</resources>