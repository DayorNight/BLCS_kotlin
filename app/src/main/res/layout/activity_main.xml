<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="user" type="com.blcs.kotlin.bean.User"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

        <TextView
            android:id="@+id/btn_aa"
            android:layout_width="120dp"
            android:layout_height="220dp"
            android:background="@color/purple_200"
            android:text="xxxx"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_aa1"
            android:layout_width="120dp"
            android:layout_height="220dp"
            android:background="@color/purple_200"
            android:text="xxxx"
            app:layout_constraintLeft_toRightOf="@+id/btn_aa"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_aa2"
            android:layout_width="120dp"
            android:layout_height="220dp"
            android:background="@color/purple_200"
            android:text="xxxx"
            app:layout_constraintLeft_toRightOf="@+id/btn_aa1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>