<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blcs.kotlin">

    <application
        android:name=".BlcsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_app512"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app512"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.BLCSkotin">

        <!-- 适配华为（huawei）刘海屏 -->
        <meta-data
            android:name="android.notch_support"
            android:value="true" /> <!-- 适配小米（xiaomi）刘海屏 -->
        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" /> <!-- 关于全面屏 -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.4" />

        <activity android:name=".activity.SplashActivity" android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.GuideActivity" android:label="@string/activity_guide" />
        <activity android:name=".activity.LoginActivity"  android:label="@string/activity_login"/>
    </application>

</manifest>